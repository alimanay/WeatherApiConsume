<Window x:Class="Api_Weather_Consume.İslemlerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Api_Weather_Consume"
        mc:Ignorable="d"
        Title="İslemlerMenu" Height="498" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF81D4FA"
   ResizeMode="NoResize"
       >
    <Window.Resources>
        <Style TargetType="TextBox">


        </Style>
    </Window.Resources>
    <Grid Margin="2,5,-2,-4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="332*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="2,108,3,16" Grid.ColumnSpan="2">
            <DataGrid x:Name="DataGridList"
              Height="313"
              Width="430"
              Background="Beige"
              AutoGenerateColumns="True"
              IsReadOnly="True"
                     SelectionChanged="DataGridList_SelectionChanged"/>
        </StackPanel>
        <StackPanel Margin="71,118,26,99" Grid.Column="2">
            <Button Width="180" FontSize="20" Height="30" Margin="2,2,2,20" Click="ButtonList_ClickAsync" >Şehir Listesini Getir</Button>
            <Button Width="180" FontSize="20" Height="30" Margin="2,2,2,20" Click="ButtonAdd_Click">Ekle</Button>
            <Button Width="180" FontSize="20" Height="30" Margin="2,2,2,20" Click="ButtonDelete_Click">Sil</Button>
            <Button Width="180" FontSize="20" Height="34" Margin="2,2,2,20" Content="Güncelle" Click="ButtonUpdate_Click"/>

        </StackPanel>
        <Grid Grid.ColumnSpan="3" Margin="20,10,66,0" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TextBlock satırı -->
                <RowDefinition Height="Auto"/>
                <!-- TextBox satırı -->
            </Grid.RowDefinitions>

            <!-- Başlıklar -->
            <TextBlock Grid.Column="0" Grid.Row="0" FontSize="20" Text="Şehir İsmi" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="0" FontSize="20" Text="Ülke" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Grid.Row="0" FontSize="20" Text="Derece" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Grid.Row="0" FontSize="20" Text="Detay" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" FontSize="20"  Name="txt_Id" Visibility="Hidden"  HorizontalAlignment="Left" Margin="30,39,0,-31" Width="36"/>

            <!-- TextBoxlar -->
            <TextBox Grid.Column="0" Grid.Row="1" Margin="2" Height="30" Width="140" Name="txt_CityName"/>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="2" Height="30" Width="140" Name="txt_Country"/>
            <TextBox Grid.Column="2" Grid.Row="1" Margin="2" Height="30" Width="140" Name="txt_Temprature"/>
            <TextBox Grid.Column="3" Grid.Row="1" Margin="2" Height="30" Width="140" Name="txt_Detail"/>
        </Grid>


    </Grid>
</Window>
