<Window x:Class="Api_Weather_Consume.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Api_Weather_Consume"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900"
        Background="#FF81D4FA"
       WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <StackPanel>
            <TextBlock  FontSize="20" Width="312" Margin="50">API Consume İşlemine Hoşgeldiniz</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock  Width="232" Margin="90"  FontSize="14" >Yapmak İstediğiniz İşlemi Seçiniz</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Cursor="Hand" Content="İşlemler" Width="150" Height="40" Margin="5" Click="Btn_İslemler"/>
            <Button  Cursor="Hand" Content="Çıkış" Width="180" Height="40" Margin="5"/>
        </StackPanel>


    </Grid>
</Window>
